<!DOCTYPE html>
<html>
<head>
  <title>Zendo | Learn. Study. Know.</title>

  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <!--auto-include js if exists-->
  <% auto_js_full =  RAILS_ROOT + '/public/javascripts/' + controller.controller_name + '/' + controller.action_name + '.js'  %>
  <% auto_js_css =  controller.controller_name + '/' + controller.action_name  %>
  <% if  File.file?(auto_js_full) %>
    <%= javascript_include_tag auto_js_css %>
  <% end %>

  <!--auto-include css if exists-->
  <% auto_js_full =  RAILS_ROOT + '/public/stylesheets/' + controller.controller_name + '/' + controller.action_name + '.css'  %>
  <% if  File.file?(auto_js_full) %>
    <%= stylesheet_link_tag auto_js_css %>
  <% end %>

  <!--load page specific scripts in head-->
  <% if @page_specific_scripts_js %> <%= javascript_include_tag @page_specific_scripts_js %> <% end %>
  <% if @page_specific_scripts_css %> <%= stylesheet_link_tag @page_specific_scripts_css %> <% end %>

  <link rel="icon" type="image/png" href="/images/logos/favicon.ico" />
</head>
<body>
  <div class="wrapper">

    <div class="header_container">
      <div class="header">
        <%= render 'shared/authentication' %>
      </div>
    </div>

    <!--flash messages-->
    <% unless flash[:notice].blank? && flash[:error].blank? %>
      <div class="flash_container">
        <% unless flash[:notice].blank? %><span class="notice rounded_border"><%= flash[:notice] %></span><% end %>
        <% unless flash[:error].blank? %><span class="error rounded_border"><%= flash[:error] %></span><% end %>
      </div>
    <% end %>

    <div class="contents"><%= yield %></div>

    <div class="clr"></div><br />
    <div class="footer">
      <div class="footer_columns">
        <div class="footer_column">
          <h5>Zendo</h5>
          <%= link_to "About", "/about" %>
          <span>Blog</span>
          <span>Terms of Service</span>
          <span>Privacy Policy</span>
        </div>

        <div class="footer_column">
          <h5>Product</h5>
          <span>FAQ</span>
          <span>Articles</span>
        </div>

        <div class="footer_column">
          <h5>Contact</h5>
          <span>Feedback</span>
          <span>Suggest a feature</span>
          <span>Report a bug</span>
        </div>

        <div class="footer_column">
          
          <h5>Facebook</h5>
          <fb:like href="zen.do" show_faces="true" width="350" action="recommend"></fb:like>

          <h5>Twitter</h5>
          <script src="http://widgets.twimg.com/j/2/widget.js"></script>
          <script>
          new TWTR.Widget({
            version: 2,
            type: 'profile',
            rpp: 1,
            interval: 6000,
            width: 350,
            height: 200,
            theme: {
              shell: {
                background: '#d6d6d6',
                color: '#333333'
              },
              tweets: {
                background: '#ffffff',
                color: '#00b3ff',
                links: '#005985'
              }
            },
            features: {
              scrollbar: false,
              loop: false,
              live: false,
              hashtags: true,
              timestamp: true,
              avatars: false,
              behavior: 'all'
            }
          }).render().setUser('zendo_notes').start();
          </script>

        </div>
        <h6 class="copyright">Copyright 2011 Zendo. All rights reserved.</h6>
      </div>
    </div>
  </div>
  <%= javascript_include_tag '/javascripts/pages/feedback' %>
  <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
</body>
</html>