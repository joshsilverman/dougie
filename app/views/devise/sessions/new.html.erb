<div class="splash-wrapper">
  
  <div class="headline" id="headline">
    <h1><span style="color:#009CFF;">Zendo</span> makes learning easy and more effective</h1>
    <h5>Roll over the images below to see how</h5>
  </div>

  <div class="splash-img-wrapper">
    <div class="splash"><img src="/images/home/learn.png" onmouseover="document.getElementById('headline').innerHTML = '<h1><span style=\'color:#009CFF;\'>Learn</span> by taking notes like you normally would</h1><h5>We\'ll turn it into study material for you!</h5>';"/></div>
    <div class="splash"><img src="/images/home/study.png" onmouseover="document.getElementById('headline').innerHTML = '<h1><span style=\'color:#009CFF;\'>Study</span> using flashcards made from your notes</h1><h5>We\'ll track what\'s important to you and how well you know it!</h5>';"/></div>
    <div class="splash"><img src="/images/home/know.png" onmouseover="document.getElementById('headline').innerHTML = '<h1><span style=\'color:#009CFF;\'>Know</span> all of your material cold</h1><h5>Study what matters at the right time for improved retention in less time!</h5>';"/></div>
  </div>

  <div class="register">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "", new_registration_path(resource_name), :class => "register_button"%><br />
  <% end %>
</div>

</div>

<h2 style="width:550px; margin:5px auto;">Already Registered? Sign in here!</h2>
<div style="width:550px; height: 175px; margin:0 auto; padding:5px;" class="rounded_border">
  <div style="width:300px; float: left;">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :email %><br />
  <%= f.text_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%>

  <%= f.submit "Sign in" %></p>
<% end %>
</div>
<div style="width:250px; float: left; margin-top: 50px;">
<%= render :partial => "devise/shared/links" %>
</div>
</div>